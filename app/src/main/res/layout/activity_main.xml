<com.example.alexbuicescu.androidworkshop.Views.MainLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_main_first_name_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_name_title"/>

    <TextView
        android:id="@+id/activity_main_first_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/activity_main_last_name_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_name_title"/>

    <TextView
        android:id="@+id/activity_main_last_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/activity_main_age_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age_title"/>

    <TextView
        android:id="@+id/activity_main_age_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</com.example.alexbuicescu.androidworkshop.Views.MainLayout>
